{
  "extends": ["expo/tsconfig.base", "./tsconfig.paths.json"],
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.tsx",
    "services/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.ts",
    "*.ts",
    "*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
